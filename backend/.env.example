# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/remesapay?schema=public"

# Server
PORT=3001
NODE_ENV=development
API_VERSION=v1

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret-here
REFRESH_TOKEN_EXPIRES_IN=30d

# Blockchain Configuration
# Base Network (Coinbase L2)
BASE_RPC_URL=https://mainnet.base.org
BASE_CHAIN_ID=8453
BASE_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Optimism Network (Alternative L2)
OPTIMISM_RPC_URL=https://mainnet.optimism.io
OPTIMISM_CHAIN_ID=10
OPTIMISM_USDC_ADDRESS=0x7F5c764cBc14f9669B88837ca1490cCa17c31607

# Smart Contract Addresses (Deploy and update these)
REMESA_PAY_CONTRACT_BASE=0x0000000000000000000000000000000000000000
REMESA_PAY_CONTRACT_OPTIMISM=0x0000000000000000000000000000000000000000
MERCHANT_REGISTRY_BASE=0x0000000000000000000000000000000000000000
MERCHANT_REGISTRY_OPTIMISM=0x0000000000000000000000000000000000000000

# Private Keys for Server Operations (Use secure key management in production)
OPERATOR_PRIVATE_KEY=your-operator-private-key-here
TREASURY_ADDRESS=0x0000000000000000000000000000000000000000

# External APIs
# Exchange Rates
COINMARKETCAP_API_KEY=your-coinmarketcap-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# Geolocation & Maps
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Communications
# Twilio (SMS for Ecuador)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WHATSAPP_NUMBER=+1234567890

# SendGrid (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@remesapay.com
SENDGRID_FROM_NAME=RemesaPay

# Redis (Caching & Sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# File Storage (AWS S3 for KYC documents)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=remesapay-documents
AWS_S3_BUCKET_REGION=us-east-1

# ENS Configuration
ENS_PROVIDER_URL=https://mainnet.infura.io/v3/your-infura-key
ENS_DOMAIN=remesapay.eth

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000,https://app.remesapay.com
BCRYPT_ROUNDS=12

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
DATADOG_API_KEY=your-datadog-api-key

# Compliance
AML_PROVIDER_API_KEY=your-aml-provider-key
SANCTIONS_LIST_API_KEY=your-sanctions-api-key

# Ecuador Specific
ECUADOR_TIMEZONE=America/Guayaquil
ECUADOR_CURRENCY=USD
MAX_REMITTANCE_AMOUNT=999

# Gas Optimization
GAS_PRICE_ORACLE_URL=https://api.blocknative.com/gasprices/blockprices
GAS_STATION_API_KEY=your-gas-station-api-key

# WebSocket
SOCKET_IO_CORS_ORIGIN=http://localhost:3000,https://app.remesapay.com

# Webhook Security
WEBHOOK_SECRET=your-webhook-signing-secret

# Feature Flags
ENABLE_KYC_VERIFICATION=true
ENABLE_LARGE_AMOUNTS=true
ENABLE_MERCHANT_ONBOARDING=true
ENABLE_SMS_NOTIFICATIONS=true
ENABLE_WHATSAPP_NOTIFICATIONS=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Development
SWAGGER_ENABLED=true
DEBUG_MODE=true
